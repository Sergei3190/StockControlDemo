@model ForgotPasswordViewModel

<section id="form"><!--form-->

	<partial name="_ValidationSummary" />

    <div class="container">
        <div class="row top-buffer">

            <div class="col"></div>
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <h3>Восстановление пароля</h3>
                    </div>
                    <div class="card-body">

                        <p>Введите email, который вы использовали при регистрации.</p>

                        <form asp-route="ForgotPassword">
                            <input type="hidden" asp-for="ReturnUrl" />

                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" class="form-control" placeholder="Электронная почта" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="d-flex justify-content-between">
                                <button class="btn btn-primary" name="button" value="forgot">Восстановить</button>
                                <button formnovalidate
                                        class="btn btn-secondary"
                                        name="button"
                                        value="cancel">
                                    На главную
                                </button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
            <div class="col"></div>
        </div>
    </div>
</section><!--/form-->

@*Подключаем скрипт валидации формы на стороне браузера*@
@section Scripts
{
	<partial name="_ValidationScriptsPartial" />
}