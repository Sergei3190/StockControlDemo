{
  "CorsPolicy": {
    "Name": "CorsApiPolicy",
    "ExposedHeaders": [
      "Content-Disposition",
      "x-file-name"
    ],
    "AllowedOriginsList": [
      "^http[s]?:\\/\\/xxx\\.xxx\\.xx\\.xx(:\\d{1,6})?$", //вместо x сюда нужно добавить Ip разворачиваемого сервера
      "^http[s]?:\\/\\/localhost(:\\d{1,6})?$"
    ],
    "AllowedMethodsList": [
      "GET",
      "POST",
      "DELETE",
      "PUT",
      "PATCH",
      "OPTIONS"
    ],
    "AllowedHeadersList": [
      "X-Request-Token",
      "Accept",
      "Content-Type",
      "Authorization",
      // указанные ниже заголовки нужны для установки связи через Cors с SignalR,
      "X-Requested-With",
      "x-signalr-user-agent"
    ]
  },
